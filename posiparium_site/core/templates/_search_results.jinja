            <div class="display-options">
                <!-- todo: align, styles, cookies -->
                <span class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="filter-paid" checked="checked">
                            <span class="checkbox-material"><span class="check"></span></span>
                            <span>На платній основі</span>
                        </label>
                    </div>
                </span>
                <span class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="filter-free" checked="checked">
                            <span class="checkbox-material"><span class="check"></span></span>
                            <span>На загальних засадах</span>
                        </label>
                    </div>
                </span>
            </div>

            {% set region = "" %}
            {% set body = "" %}
            {% for region in search_results|groupby('region') %}
                <h2>{{ region.grouper }}</h2>
                {% for body in region.list|groupby('body') %}
                    <h3>{{ body.grouper }}</h3>
                    {% for mp in body.list|groupby('mp.grouper') %}
                        {% set first_item = mp.list[0].mp %}
                        <h4><a href="{{ url('mp_details', first_item.id) }}">{{ first_item.name }}</a></h4>
                        {% if first_item.party %}
                        <p>
                            Партія: {{ first_item.party }}
                        </p>
                        {% endif %}
                        {% if first_item.fraction %}
                        <p>
                            Фракція: {{ first_item.fraction }}
                        </p>
                        {% endif %}
                        {% if first_item.comission %}
                        <p>
                            Комісія: {{ first_item.comission }}
                        </p>
                        {% endif %}

                        <ul>
                            {% for minion in mp.list %}
                            <li>{{ minion.name }}{% if minion.confirmed %} (Підтверджено {{ minion.confirmed|format_date }}){% endif %}</li>
                            {% endfor %}
                        </ul>
                    {% endfor %}
                {% endfor %}
            {% endfor %}

