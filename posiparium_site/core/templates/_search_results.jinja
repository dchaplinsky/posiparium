    {% from "_pagination.jinja" import render_pagination with context %}

    <section class="search-results">
        <div class="container">

            {% set region = "" %}
            {% set body = "" %}
            {% for region in search_results|groupby('region') %}
                <h2 class="search-grouper-title region-grouper">{{ region.grouper }}</h2>
                {% for body in region.list|groupby('body') %}
                    <h3 class="search-grouper-title body-grouper">{{ body.grouper }}</h3>

                    {% for mp in body.list|groupby('mp.grouper') %}
                        {% set first_item = mp.list[0].mp %}
                        {% if loop.index is not divisibleby 2 %}
                            <div class="row">
                        {% endif %}
                        <div class="small-profile col-sm-6" itemscope="" itemtype="http://schema.org/Person">
                            <div class="box active-box" data-url="{{ url('mp_details', first_item.id) }}">
                                <header class="profile-header">
                                    <div class="avatar no-foto"></div>
                                    <h3 class="name" itemprop="name">{{ first_item.name }}</h3>
                                </header>

                                <div class="descr">
                                {% if first_item.party %}
                                    <div>
                                        <span>Партія:</span> {{ first_item.party }}
                                    </div>
                                {% endif %}

                                {% if first_item.fraction %}
                                    <div>
                                        <span>Фракція:</span> {{ first_item.fraction }}
                                    </div>
                                {% endif %}

                                {% if first_item.comission %}
                                    <div>
                                        <span>Комісія</span> {{ first_item.comission }}
                                    </div>
                                {% endif %}
                                </div>

                                <ul class="posipaky">
                                    <span>Помічники: </span>
                                    {% for minion in mp.list %}
                                    <li class="link_nb">{{ minion.name }}{% if minion.confirmed %} (Підтверджено {{ minion.confirmed|format_date }}){% endif %}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        {% if loop.index is divisibleby 2 %}
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            {% endfor %}

            {% if search_results.paginator.num_pages > 1 %}
            <nav>
                {{ render_pagination(search_results, "") }}
            </nav>
            {% endif %}

        </div>
    </section>
